// returns val + 1

template incr<T> {
  func T incr<T> (T val) {
    halfSum = halfAdd<T>(val, 1)
    return halfSum[0 : T]
  }
}


test -2 = incr<Tiny>(-3)
test -1 = incr<Tiny>(-2)
test 0 = incr<Tiny>(-1)
test 1 = incr<Tiny>(0)
test 2 = incr<Tiny>(1)

